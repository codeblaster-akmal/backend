# Run the container with `docker run -p 3000:3000 -t benevo`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system benevo && \
          adduser --system -G benevo benevo

COPY dist/apps/benevo benevo/
RUN chown -R benevo:benevo .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix benevo --omit=dev -f install

CMD [ "node", "benevo" ]
